<log4net>
  <appender name="DEFAULT" type="log4net.Appender.RollingFileAppender">
    <file value="Log\Default.log" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <layout type="log4net.Layout.XmlLayout" />
    <threshold value="INFO" />
  </appender>
  <appender name="CONSOLE" type="log4net.Appender.ColoredConsoleAppender">
    <mapping>
      <level value="CRITICAL" />
      <foreColor value="White, HighIntensity" />
      <backColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="ERROR" />
      <foreColor value="Red, HighIntensity" />
    </mapping>
    <mapping>
      <level value="WARN" />
      <foreColor value="Yellow, HighIntensity" />
    </mapping>
    <mapping>
      <level value="NOTICE" />
      <foreColor value="Green, HighIntensity" />
    </mapping>
    <mapping>
      <level value="INFO" />
      <foreColor value="Cyan, HighIntensity" />
    </mapping>
    <mapping>
      <level value="TRACE" />
      <foreColor value="White, HighIntensity" />
    </mapping>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%9.9level - %message%newline" />
    </layout>
    <threshold value="DEBUG" />
  </appender>
  <appender name="TCP" type="Fuxion.Logging.TcpAppender, Fuxion.Log4net">
    <param name="LocalPort" value="878" />
    <layout type="log4net.Layout.XmlLayout" />
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="DEFAULT" />
    <appender-ref ref="CONSOLE" />
    <appender-ref ref="TCP" />
  </root>
</log4net>
